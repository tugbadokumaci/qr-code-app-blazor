@page "/add"
<PageTitle>Add</PageTitle>

<h1>Add Card Page</h1>

<form>
    <div class="form-group">
        <label for="exampleInputEmail1">Card Display Name</label>
        <input type="text" class="form-control" id="cardDisplayName" aria-describedby="displayHelp" placeholder="Enter card display">
        <small id="displayHelp" class="form-text text-muted">This will show as title of the card.</small>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="surname">Surname</label>
        <input type="text" class="form-control" id="surname" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>